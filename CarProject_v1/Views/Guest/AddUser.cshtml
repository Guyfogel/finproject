@{
    ViewBag.Title = "AddUser";
}
<script src="~/Scripts/jquery-2.1.3.js"></script>
<script>
    $(function () {
            

            $('button').click(function () {
                var dataForServer = $('input option:selected').serialize();
                $.post("@Url.Action("InsertUser")", dataForServer, function (resp) {
                    if (resp.Status == "OK") {
                        alert(resp.Status)
                    } else {
                        alert(resp.Status);
                    }
                });
            });
        });
    
</script>
<h2>Signup</h2>
<div>
    <form method="post">
        <label for="Username">Username:</label>
        <input name="Username" /><br />
        <label for="Password">Password:</label>
        <input name="Password" /><br />
        <label for="RepeatPassword">Repeat password:</label>
        <input name="RepeatPassword" /><br />
        <label for="Name">Name:</label>
        <input name="Name" /><br />
        <label for="Email">Email</label>
        <input name="Email" /><br />
        <label for="Gender">Gender</label>
        <select name="Gender" >
        <option>Male</option>
        <option>Female</option>
        </select><br />
        <label for="Personnum">Personnumber:</label>
        <input name="Personnum" /><br />
        <button type="button" onclick="uploadPic">Upload Picture</button>
        <button type="submit" onclick="clickMe">Save user</button>
    </form>
</div>
<div>
    @ViewBag.Message;
</div>
